{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./bin",
        "moduleResolution": "node",
        "watch": true,
        "removeComments": true,
        "declaration": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "types/*"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.d.ts"
    ]
}